{{ front.config({
    'title': 'Profil bearbeiten',
    'breadcrumb': [
        [ 'Profil', 'Core/Session/Profile/index' ]
    ]
}) }}


<div class="row">
    <div class="col-5">

        <div class="portlet">
            <div class="head">
                <h3>Passwort</h3>
            </div>
            <div class="body">

                <form class="ajax" method="post" action="{{ controller.getActionUri('ajaxUpdatePassword') }}">

                    <div class="form-group">
                        <label for="pw1">neues Passwort</label>
                        <input type="password" class="form-control" id="pw1" name="pw1" placeholder="neues Passwort" value="">
                    </div>
                    <div class="form-group">
                        <label for="pw2">wiederholen</label>
                        <input type="password" class="form-control" id="pw2" name="pw2" placeholder="wiederholen" value="">
                    </div>

                    <button type="submit" class="btn btn-primary">Passwort setzen</button>

                </form>

            </div>
        </div>
    </div>
</div>